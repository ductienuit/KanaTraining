<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_social_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginOptionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_24sdp"
            android:paddingRight="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_60sdp">


            <ImageView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center"
                android:src="@drawable/app"
                android:contentDescription="logo"/>

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp" />

            <Button
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="@dimen/_12sdp"
                android:text="@string/sign_in"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/sign_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@drawable/rounded_corner_background"
                android:elevation="4dp"
                android:padding="@dimen/_12sdp"
                android:text="@string/sign_up"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingLeft="@dimen/_24sdp"
            android:paddingRight="@dimen/_24sdp">

            <TextView
                android:id="@+id/login_link"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:gravity="center"
                android:text="Or One-tap Sign In"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/facebook_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:paddingRight="@dimen/_6sdp"
                    android:paddingLeft="-10sp"
                    app:fb_borderWidth="2dp"
                    app:fb_borderColor="#4e7ab5"
                    app:fb_iconPosition="left"
                    app:fb_iconResource="@drawable/ic_facebook"
                    app:fb_iconPaddingTop="3sp"
                    app:fb_iconPaddingLeft="8sp"
                    app:fb_iconPaddingRight="1sp"
                    app:fb_text="Facebook"
                    app:fb_textSize="@dimen/_16sdp"
                    app:fb_textColor="#ffffff"
                    app:fb_defaultColor="@color/facebookColor"
                    app:fb_focusColor="#6183d2"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/google_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingLeft="-30sp"
                    app:fb_borderWidth="2dp"
                    app:fb_borderColor="@color/grey_300"
                    app:fb_iconPosition="left"
                    app:fb_iconResource="@drawable/ic_google"
                    app:fb_iconPaddingTop="3sp"
                    app:fb_iconPaddingLeft="10sp"
                    app:fb_iconPaddingRight="10sp"
                    app:fb_text="Google"
                    app:fb_textSize="@dimen/_16sdp"
                    app:fb_textColor="@color/black"
                    app:fb_defaultColor="@color/white"
                    app:fb_focusColor="@color/grey_300"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>