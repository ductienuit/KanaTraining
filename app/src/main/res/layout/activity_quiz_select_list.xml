<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/navi_bar_black" />

    <TextView
        android:id="@+id/select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:text="@string/QuizQuestion_Title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_weight="0"
        />

    <LinearLayout
        android:id="@+id/quiz_select_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/select_line_button1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bg_quiz_select_normal"
            android:clickable="true"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:onClick="clickCell"
            android:tag="0"
            android:text="a–o and ka–ko"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/select_line_button2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bg_quiz_select_normal"
            android:clickable="true"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:onClick="clickCell"
            android:tag="1"
            android:text="sa–so and ta–to"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/select_line_button3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bg_quiz_select_normal"
            android:clickable="true"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:onClick="clickCell"
            android:tag="2"
            android:text="na–no and ha–ho"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/select_line_button4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bg_quiz_select_normal"
            android:clickable="true"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:onClick="clickCell"
            android:textAlignment="center"
            android:tag="3"
            android:text="ma–mo and ya–yo"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/select_line_button5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_51sdp"
            android:background="@drawable/bg_quiz_select_normal"
            android:clickable="true"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:onClick="clickCell"
            android:tag="4"
            android:text="ra–ro and wa–N"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/quiz_select_similar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_marginTop="50dp"
        android:background="@drawable/img_text_similar"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|fill_horizontal|clip_vertical|clip_horizontal|start"
        android:layout_weight="1"
        android:orientation="vertical"
       >

        <Button
            android:id="@+id/start_quiz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_cycle04"
            android:clickable="true"
            android:onClick="clickQuizStart"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="@string/QuizQuestion_Button"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
